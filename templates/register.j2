{% extends "base.j2" %}
{% block title %}Registration{% endblock %}
{% block content %}
<form action="/register" onsubmit="return validateRegister()" method="POST">
    <div class="register form">
        <div class="username_label"><label for="username">Username:</label></div>
        <div class="username_entry"><input type="text" name="username" id="username"></div>
        <div class="passsword_label"><label for="password">Password:</label></div>
        <div class="password_entry"><input type="password" name="password" id="password"></div>
        <div class="email_label"><label for="email">Mail:</label></div>
        <div class="email_entry"><input type="email" name="email" id="email"></div>
        <div class="date_label"><label for="birthday">Birthdate:</label></div>
        <div class="date_entry"><input type="date" id="birthday" name="birthday"></div>
        <button type="submit" class='btn btn-success'>Gogogo</button>
    </div>
</form>
{% endblock %}